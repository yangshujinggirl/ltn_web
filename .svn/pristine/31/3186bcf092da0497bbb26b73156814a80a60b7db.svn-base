.account-login{
  .component-wrap {
    padding:35px;
    .title {
      font-size: 14px;
      color: #ea5504;
      height: 30px;
      line-height: 30px;
      border-bottom: 2px solid #e2e2e2;
     // margin: 20px 35px;
      .item {
        border-bottom: 2px solid #ea5504;
        width: 100px;
        text-align: center;
      }
    }
    .form {
      font-size: 14px;
      margin: 50px auto 0 auto;
      .row {

        line-height: 35px;
        margin: 15px 0;

        .caption {
          color: #8a8a8a;
          text-align: right;
          font-weight: bold;
          width: 33.333%;
          box-sizing: border-box;
          display: inline-block;
          padding: 0 20px 0 0;
        }

        .field {
          width: 30%;
          display: inline-block;
          vertical-align: middle;

          .input {
            width: 100%;
            height: 35px;
            color: #cacaca;
            box-sizing: border-box;
            padding: 0 15px;
            float: left;

            &.validate {
              width: 60%;
            }
            &.short {
              width: 60%;
            }
          }
          .validate-image, .validate-sms {
            width: 35%;
            height: 35px;
            float: right;
          }
          .validate-sms {
            border: 1px solid #38a2ff;
            border-radius: 4px;
            box-sizing: border-box;
            background: none;
            font-size:14px;
            color:#38a2ff;
            &.disabled {
              background: #d7d7d7;
              cursor: not-allowed;
              color: #fff;
              border-color: #fff;
            }
          }
          .check {
            cursor: pointer;
          }
          .info {
            font-size: 12px;
            padding: 0 6px;
            cursor: pointer;
          }
          .action {
            color: #fff;
            background: #ff6f20;
            border: none;
            box-sizing: border-box;
            font-size: 18px;
            height: 40px;
            width: 180px;
            border-radius: 4px;

            &:hover {
              background: #ff5a00;
            }
            &.disabled {
              background: #ccc;
            }
          }
        }
        &.wrap-identity {
          display: none;
        }
        .validation{
            display: none;
            color: #f78e8b;
            padding: 0 0 0 95px;
            height: 22px;
            line-height: 22px;
        }
        &.validate-failed .validation {
          padding: 0 0 0 30px;
          display: inline-block;
          background: url("/img/icon-mark-warning.png") 10px center no-repeat;
        }
        &.validate-success .validation {
          padding: 0 0 0 30px;
          display: inline-block;
          height: 14px;
          background: url("/img/icon-mark-ok.png") 10px center no-repeat;
        }
        .tips, .accept, .action {
          padding: 0 120px;
        }
        .tips {
          margin: 50px 0 0 0;
          border-top: 1px dashed #e2e2e2;
          .content {
            font-size: 12px;
            line-height: 24px;
            text-align: justify;
            color: #8a8a8a;
            .mark {
              background: none;
              color: $font-height-light-color;
            }
          }
        }

        .accept {
          margin: 20px 0;
          text-align: center;
          .check, .label {
            cursor: pointer;
          }
          .label {
            padding: 0 5px;
          }
          .link {
            color: $link-color;
            &:hover {
              color: $link-color-hover;
            }
          }
        }

        .action {
          text-align: center;
          padding: 20px 0 0 0;
          .button {
            width: 180px;
            height: 45px;
            margin: 0 30px 0 0;
            border: none;
            border-radius: 4px;

            background: $bg-btn;
            color: #fff;
            font-size: 18px;

            &:hover {
              background: $bg-btn-hover;
            }
          }
          .link {
            color: $link-color;
            &:hover {
              color: $link-color-hover;
            }
          }
          .text {
            margin: 0 0 0 30px;
          }
        }
      }
      .login-tip {
          margin-top: 20px;
          box-sizing: border-box;
          text-align: center;
          color: #f78e8b;
          display: none;
          .icon-wran {
            display: inline-block;
            width: 14px;
            height: 14px;
            background: url("/img/icon-mark-warning.png") no-repeat;
            background-size: 14px 14px;
            vertical-align: middle;
          }
          .wran-tip {
            margin-left: 6px;
          }
      }
    }
    .login .form .action .button {
      margin: 0;
    }

    .login, .forget{
      .banner {
        height: 150px;
        background: grey;
        margin: 10px 0 30px 0;
      }
    }
    .realname .form {
      background: url(/img/realname_01.png) right bottom no-repeat;

      .tips, .accept, .action {
        padding-right: 270px;
      }
      .accept {
        text-align: left;
      }
    }
  }
}