.user-dialog{
    .forget{
        height: 640px;
        background: #fff;
        padding: 20px 60px;
        border: 1px solid #e2e2e2;
        .banner {
          margin-bottom: 30px;
          img{
            width: 100%;
          }
        }
        .form{
            display: block;
            border: 0;
            height: 390px;
            float: none;
            margin:0 auto;
            .row{
              margin: 20px 0;
              .caption{
                width: 92px;
              }
              .validate-sms,.validate-image{
                width: 36%;
                margin-left: 16px;
                vertical-align: top;
              }
              .button{
                width: 188px;
                margin: 20px 0 0 16px;
              }
               &.wrap-identity{
                    display: none;
                }
                &.validate-failed {
                    .field {
                        .input {
                            outline: 5px auto #f78e8b;
                            color: #cacaca;
                            outline-offset: -2px;
                        }
                    }
                    .validation {
                            right:-168px;
                            top:50%;
                            margin-top: -16px;
                    }
                }
                &.validate-success {
                    position:relative;
                    .validation {
                        top: 50%;
                        height: 14px;
                        margin-top: -7px;
                        right: -30px;
                        background: url("/html/img/icon-mark-ok.png") 10px center no-repeat;
                    }
                }
                .field {
                    width: 75%;
                    display: inline-block;
                    vertical-align: middle;
                    position: relative;
                    .input {
                        width: 100%;
                        height: 40px;
                        box-sizing: border-box;
                        padding: 0 15px;
                        float: left;
                        border: 1px solid $border-color;
                        border-radius: 5px;
                        background: #fff;
                        position: relative;
                        padding-left: 40px;
                        &.short {
                           width: 57%;
                           padding-left: 23px;
                        }
                    }
                    input:-webkit-autofill {
                        -webkit-box-shadow: 0 0 0px 1000px white inset;
                       }
                    .shouji{
                        position: absolute;
                        left:11px;
                        top:8px;
                        z-index: 999;
                    }
                    .password{
                        position: absolute;
                        left:11px;
                        top:8px;
                        z-index: 999;
                    }
                    .check {
                        cursor: pointer;
                    }
                    .info {
                        font-size: 12px;
                        padding: 0 6px;
                        cursor: pointer;
                    }
                    .action {
                        color: #fff;
                        background: #ff6f20;
                        border: none;
                        box-sizing: border-box;
                        font-size: 18px;
                        height: 40px;
                        width: 180px;
                        border-radius: 4px;
                        &:hover {
                            background: #ff5a00;
                        }
                        &.disabled {
                            background: #ccc;
                        }
                    }
                    .validate-sms {
                        height: 40px;
                    }
                }
            }
            .row2{
            display: none;
            }
            .login-tip {
                width: 156px;
                height: 32px;
                font-size: 12px;
                margin-top: 20px;
                box-sizing: border-box;
                text-align: center;
                color: #f78e8b;
                display: none;
                text-align: center;
                color: #fff;
                position: absolute;
                right:273px;
                top:273px;
                z-index: 999;
                background:url(/html/img/login-tip3.png);
                .icon-wran {
                    display: inline-block;
                    width: 14px;
                    height: 14px;
                    /* background: url("/html/img/icon-mark-warning.png") no-repeat; */
                    background-size: 14px 14px;
                    vertical-align: middle;
                }
                .wran-tip{
                    margin-left: 6px;
                }
            }
        }
    }

}
