.product-success {
  width: 520px;
  height: 350px;
  border: 8px solid rgba(0,0,0,.1);
  border-radius: 4px;
  background: #fff;

  position: fixed;
  left: 50%;
  top: 50%;
  margin-top: -220px;
  margin-left: -280px;

  padding: 0 20px 20px 20px;
  overflow: hidden;
  display: none;

  z-index: $z-index-dialog;

  &.show {
    display: block;
  }

  .header {
    border-bottom: 1px solid #e2e2e2;
    height: 60px;
    line-height: 60px;
    margin: 0;
    padding: 0 0 0 20px;
    font-size: 18px;
    text-align: center;

    .title {
      background: url(/img/icon-stat-success.png) left center no-repeat;
      padding-left: 30px;
      display: inline-block;
    }
  }

  .content{

    padding: 20px 0;

    .title {
      text-align: center;
      font-size: 16px;
      color: $font-color-title;
      font-weight: bold;
      line-height: 2;
      margin: 30px 0;
    }

    .desc {
      font-size: 12px;
      color: $font-color-sub;
      line-height: 2;
      text-align: center;
      margin: 10px 0;
    }
  }

  .action {
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 30px;

    .ok, .cancel ,.jixu{
      width: 180px;
      height: 35px;
      box-sizing: border-box;
      border: 2px solid $bg-btn;
      border-radius: 4px;
      font-size: 18px;
      margin: 0 12px;

      &:hover {
        background: $bg-btn-hover;
        border-color: $bg-btn-hover;
        color: #fff;
      }
    }
    .ok {
      background: $bg-btn;
      color: #fff;
    }
    .jixu{
      background: #fff;
      color: $bg-btn;
      border: 1px solid $bg-btn;
    }
    .cancel {
      background: none;
      color: $bg-btn;
    }
  }
}