$loan-banner-height: 360px;

.loan-banner {
  height: $home-banner-height;
  background: url(../../../img/jiekuan-banner.png);
  margin-left: -330px;
  .dialog {
    background: #fff;
    width: 340px;
    height: 255px;
    float: right;
    margin: 60px 50px 60px 0;
    position: relative;
    
    .adv {
      text-align: center;
      .title {
        font-size: 24px;
        color: #e98b05;
        width: 220px;
        height: 31px;
        margin: 30px auto 0 auto;
      }
      .NOTtitle{
        color: #909090;
      }
      .content {
        color: #d1a772;
        font-size: 14px;
        margin: 10px 0 0 0;
        .from{
          width: 280px;
          margin: 0 auto;
           .one{
          width: 270px;
          height: 35px;
          border: 1px solid #e2e2e2;
          color: #cbcbcb;
          font-size: 14px;
          background: #fafafa;
          padding-left: 10px;
        }
          .from-tow{
            margin-top: 20px;
              .tow{
                width: 150px;
                height: 35px;
                border: 1px solid #e2e2e2;
                // margin-left: -7px;
                vertical-align: top;
                color: #868686;
                font-size: 14px;
                padding-left: 10px;
                float: left;
              }
              .yanzheng{
                width: 111px;
                height: 37px;
                display: inline-block;
                border: 1px solid #e2e2e2;
                float:right;
              }
               .button{
                width: 111px;
                height: 37px;
                border: 0;
                float:right;
                border-radius: 3px;
                border: 1px solid #38a2ff;
                background: #fff;
                color: #38a2ff;
                font-size: 14px;
               }
          }
          .from-tow:after{
              content:" ";
              clear: both;
              overflow: hidden;
              display: block;
              height:0;
          }
        }
        .cont-top{
          font-size: 18px;
          color: #d1a772;

        }
        .cont-bottom{
          font-size: 30px;
        }
      }
    }
    .action {
      text-align: center;
      .register {
        width: 260px;
        height: 45px;
        color: #fff;
        font-size: 18px;
        background: $bg-btn;
        border: none;
        display: block;
        margin: 35px auto 0 auto;

        &:hover {
          background: $bg-btn-hover;
        }
      }
      .login {
        padding: 14px 0;
        margin: 0;
        .link {
          color: #38a2ff;
        }
      }
    }
    .delegate {
      background: #f8f8f8;
      color: #8a8a8a;
      height: 30px;
      line-height: 30px;
      text-align: center;
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0;
    }
  }
   .notdialog{
    height: 326px;
    margin: 19px 50px 60px 0;
  }
}