.user-message{
   /* display: none; */
  width: 520px;
  height: 350px;
  border: 8px solid rgba(0,0,0,.1);
  border-radius: 4px;
  background: #fff;

  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 99999999;
  margin-top: -220px;
  margin-left: -260px;

  padding: 0 20px 20px 20px;
  overflow: hidden;
  //display: none;

  &.show {
    display: block;
  }
  .messages {
    width:100%;
    height:100%;
    position:relative;
  }
  .header {
    border-bottom: 1px solid #e2e2e2;
    height: 60px;
    line-height: 60px;
    margin: 0;
    padding: 0 0 0 20px;
    font-size: 18px;
  }

  .content{
    padding: 0 0 60px 0;
    text-align: center;
    .title {
      display: inline-block;
      height: 24px;
      padding-left:30px;
      font-size: 18px;
      line-height:24px;
      margin:0;
    }

    .desc {
      padding: 0 40px;
      font-size: 16px;
      /* line-height:30px; */
    }
    .tips {
      color: #333;
      font-size: 16px;
    }

    .img {
      text-align: center;
    }
  }

  .action {
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom:35px;
    .success,.fail{
      font-size: 16px;
      margin-bottom: 30px;
      position: relative;
      .gou,.cha{
        position: absolute;
        left:50px;
        top:6px;
      }
      .ok {
      width: 180px;
      box-sizing: border-box;
      border: 2px solid $bg-btn;
      border-radius: 4px;
      font-size: 18px;
      margin: 0 12px;

      &:hover {
        background: $bg-btn-hover;
        border-color: $bg-btn-hover;
        color: #fff;
      }
    }
    .ok {
      background: $bg-btn;
      color: #fff;
    }
    .bangzhu {
      width: 180px;
      box-sizing: border-box;
      border: 2px solid #4359aa;
      border-radius: 4px;
      font-size: 18px;
      margin: 0 12px;
      background: none;
      color: #4359aa;
      &:hover {
        background: #4359aa;
        border-color: #4359aa;
        color: #fff;
      }
    }
    }
  }
  .close{
    position: absolute;
    right:17px;
    top:20px;
    cursor: pointer;
  }
  .shut {
    width:17px;
    height: 17px;
    background: url(/html/img/trading-reset_01.png);
    position:absolute;
    right:10px;
    top:10px;
  }
  .realname-success{
    .desc{
      text-align: left;
    }
    .title {
      background: url(/html/img/icon-stat-success.png) no-repeat left center;
    }
  }
  .realname-false {
    .title {
      background: url(/html/img/icon-stat-failed.png) no-repeat center left;
    }
  }
}