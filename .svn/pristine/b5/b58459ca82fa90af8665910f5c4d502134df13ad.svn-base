$nav-bgColor: #fff;
$nav-height: 88px;
$nav-border-bottom-width: 3px;
$nav-font-size: 18px;
$nav-btn-font-size: 14px;

.common-nav {
  height: $nav-height;
  background: $nav-bgColor;
  font-size: 18px;
  font-weight: bold;

  .left {
    .brand {
      background: url(/img/imageTwo/home/logo.png) center center no-repeat;
      display: inline-block;
      height: 100%;
      width: 132px;
      position: relative;
    }

    .slogan {
      background: url(/img/img-slogan.png?v=201605131412) center center no-repeat;
      display: inline-block;
      height: 49px;
      width: 158px;
      padding: 0 20px;
      margin: 20px 0 20px -29px;
    }
     .xiexiejie{
      position: absolute;
      left: 25%;
      top: 25px;
    }
  }

  .right {
    line-height: ($nav-height - $nav-border-bottom-width);

    .item {
      color: $font-color-title;
      display: inline-block;
      margin: 0 10px;
      width: 90px;
      text-align: center;

      &.selected, &:hover {
        border-bottom: $nav-border-bottom-width solid $border-hover-color;
        color: $font-color-hover;
      }

      &.button {
        display: inline;
        font-size: $nav-btn-font-size;
        color: $font-hover-color;
        border: 1px solid $border-hover-color;
        border-radius: 4px;
        padding: 10px 15px;
        cursor: pointer;
        &:hover {
          color: #fff;
          background: $border-hover-color;
        }
      }
    }
  }
}