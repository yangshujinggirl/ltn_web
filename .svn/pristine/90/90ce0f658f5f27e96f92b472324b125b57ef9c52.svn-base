.account-coinCertificate {
  $high:#ff5900;
  .contant {
    padding: 80px 105px 80px 70px;
    background-color: #FFF;
    margin-top:20px;
    border: 1px solid #e0e0e0;
    .secrity {
      color: #fff;
      font-size: 58px;
      text-align: center;
      line-height: 211px;
      width: 514px;
      height: 211px;
      background:url(/img/coinCertificate/bg_1.png) no-repeat ;
      display: inline-block;
      vertical-align: top;
    }
    .form {
      display: inline-block;
      vertical-align: top;
      padding:20px 0 0 40px;
      .row {
        width:378px;
        height: 46px;
        margin-bottom: 20px;
        position: relative;
        .input {
          width:100%;
          height: 46px;
          line-height: 46px;
          font-size:18px;
          color: #999;
          border: 1px solid #dedede;
          padding-left:12px;
          box-sizing: border-box;
          -webkit-box-sizing: border-box;
        }
        .short {
          width: 208px;
          height: 46px;
          margin-right: 5px;
          vertical-align: top;
          float: left;
        }
        .imgCode {
          width: 156px;
          height: 46px;
          border: none;
          float: right;
          cursor: pointer;
        }
        .validation {
          display: none;
          color: #fff;
          position:absolute;
          right: 0;
          top:50%;
          transform:translate(100%,-100%);
          -webkit-transform: translate(100%,-50%);
        }
        &.validate-failed {
          .validation {
            display:block;
            width: 156px;
            height: 32px;
            line-height: 32px;
            background:url(/img/coinCertificate/icon2.png) no-repeat;
            padding-left:20px;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
          }
        }
        &.validate-success {
          .validation {
              display:block;
              width: 156px;
              height: 32px;
              background: url("/img/coinCertificate/icon4.png") left center no-repeat;
          }
        }
        .btn {
          width: 208px;
          height: 46px;
          font-size: 22px;
          color: #fff;
          line-height: 46px;
          text-align: center;
          background-color: $high;
          border: none;
          border-radius: 4px;
          -webkit-border-radius: 4px;
          vertical-align: bottom;
        }
        .return {
          font-size: 14px;
          padding-left:16px;
          text-decoration:underline;
          color: #666;
          vertical-align: bottom;
        }
      }
    }
  }
  .info {
    margin-bottom: 54px;
    .hd {
      font-size: 22px;
      height: 36px;
      line-height: 36px;
      color: #333;
      font-weight: bold;
      background:url(/img/coinCertificate/icon3.png) no-repeat left center;
      padding-left:58px;
      border-bottom: 1px solid #e0e0e0;
    }
    .list {
      font-size: 16px;
      color: #666;
      padding-left:48px;
      .tip:not(:last-child) {
        line-height: 24px;
        margin-bottom: 20px;
      }
    }
  }
  .copy {
    display: none;
    width: 466px;
    height: 258px;
    background-color:#fff;
    position: fixed;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    -webkit-transform: translate(-50%,-50%);
    z-index: 9999;
    text-align: center;
    .tips {
      text-align: left;
      border-bottom: 1px solid #ccc;
      padding-top:12px;
      .line {
        display: inline-block;
        color: $high;
        font-size: 14px;
        line-height: 34px;
        padding:0 44px;
        border-bottom: 2px solid $high;
        position:relative;
        bottom:-1px;
      }
    }
    .copyBtn {
      width: 108px;
      height: 36px;
      background-color: $high;
      font-size: 18px;
      color: #fff;
      border: none;
      border-radius: 4px;
      -webkit-border-radius: 4px;
    }
    .close {
      width: 30px;
      height: 30px;
      background: #ccc url(/img/returnTickits_icon4.png) no-repeat center;
      position:absolute;
      top:8px;
      right: 10px;
      cursor: pointer;
    }
    .content1 {
      padding:0;
      font-size: 14px;
      line-height: 24px;
      color: #666;
      padding-top:46px;
    }
    .success {
      margin: 0;
      font-size: 26px;
      color:  $high;
      height: 33px;
      line-height: 33px;
      background:url(/img/returnTickits_icon5.png) no-repeat 90px center;
      text-align: left;
      padding-left:130px;
    }
    .value {
      margin:24px 0 24px;
      .look {
        color: #3ab8ff;
      }
    }
  }
}