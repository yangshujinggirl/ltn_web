.term{
  width: 100%;
  height: 3007px;
  background: url(/html/img/lishi_banner.jpg) center center no-repeat;
  .term_content{
    padding-top: 550px;
  }
  .term_top{
    width: 948px;
    height: 432px;
    background: url(/html/img/lishi_bg1.png) center center no-repeat;
    margin: 0 auto;
    .leftImg{
      padding: 75px 40px;
      display: inline-block;
      vertical-align: middle;
    }
    .rightFont{
      width: 370px;
      font-size: 14px;
      color: #323232;
      font-weight: bold;
      display: inline-block;
      vertical-align: middle;
      position: relative;
      left: -12px;
    }
    .term_name{
      display: block;
      margin-top: 5px;
    }
    .term_time{
      display: block;
      margin-top: 7px;
    }
    .zhize{
      margin-top: 20px;
      display: block;
    }
    .zeqiang{
      position: relative;
      left: 95px;
      top: -40px;
      line-height: 30px;
    }
  }
  .term_center{
    width: 827px;
    height: 439px;
    background: url(/html/img/lishi_bg2.png) no-repeat;
    margin: 65px auto;
    padding: 70px 60px;
    .center_title{
      font-size: 35px;
      color: #1c5688;
      text-align: center;
    }
    .term_caption{
      width: 250px;
      display: inline-block;
      margin-left: 22px;
      margin-top: 40px;
      .term_icon1{
        img{
          margin: 0 auto;
          display: block;
        }
      }
      .caption_title{
        font-size: 26px;
        color: #1c1c1c;
        font-weight: bold;
        text-align: center;
        margin-top: 10px;
      }
      .caption_info{
        font-size: 14px;
        color: #727272;
        font-weight: bold;
        margin-top: 15px;
        line-height: 28px;
      }
    }
    .term_caption1{
      margin-left: 10px;
    }
  }
  .term_bottom{
    width: 910px;
    background: #f3f3f3;
    border: 20px solid #a4a4ba;
    margin: 0 auto;
    padding-top: 70px;
    .bottom_title{
      font-size: 35px;
      color: #1c5688;
      text-align: center;
    }
    .bottom_caption{
      width: 850px;
      height: 308px;
      background: #fff;
      margin: 40px 0 0 0;
      padding: 1px 30px;
      .bottom_left{
        margin-top: 50px;
        display: inline-block;
        vertical-align: middle;
      }
      .bottom_font{
        width: 500px;
        display: inline-block;
        vertical-align: middle;
        position: relative;
        top: 30px;
        left: 20px;
        .font-top{
          font-size: 24px;
          color: #1c1c1c;
          font-weight: bold;
        }
        .bottom_info{
          font-size: 14px;
          color: #6e6e6e;
          margin-top: 15px;
          line-height: 25px;
        }
        .look{
          a{
            display: inline-block;
            font-size: 18px;
            color: #e74404;
            margin-top: 9px;
            font-weight: bold;
          }
        }
      }
    }
    .captionFirst{
      margin-top: 50px;
    }
  }
}